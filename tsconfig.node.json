{
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "plugins/**/*.ts",
    "vite.config.*ts",
    "uno.config.*ts"
  ],
  "exclude": ["node_modules", "tests/server/**/*.ts", "dist", "**/*.js"]
}
